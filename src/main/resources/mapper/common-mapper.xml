<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rakbow.kureakurusu.dao.CommonMapper">

<!--    <resultMap id="imageResultMap" type="java.util.List">-->
<!--        <result property="images" column="images" typeHandler="com.rakbow.kureakurusu.util.handler.TestHandler" />-->
<!--    </resultMap>-->

    <update id="updateItemStatus" keyProperty="id">
        update ${param1}
        set
        status = #{status}
        <where>
            id in
            <if test="ids != null and ids.size() != 0">
                <foreach item="item" index="index" collection="ids" open="("
                         close=")" separator=",">
                    #{item}
                </foreach>
            </if>
        </where>
    </update>

    <update id="updateItemDetail" keyProperty="id">
        update ${param1}
        set
        detail = #{text}, edited_time = #{editedTime}
        where id = #{id}
    </update>

    <update id="updateItemBonus" keyProperty="id">
        update ${param1}
        set
        bonus = #{bonus}, edited_time = #{editedTime}
        where id = #{entityId}
    </update>

    <update id="updateItemSpecs" keyProperty="id">
        update ${param1}
        set
        specs = #{specs}, edited_time = #{editedTime}
        where id = #{entityId}
    </update>

    <select id="getItemImages" resultType="string">
        select
        images
        from ${param1}
        where id = #{entityId}
    </select>

    <update id="updateItemImages" parameterType="java.util.List">
        update ${param1}
        set
        images = #{images, typeHandler=com.rakbow.kureakurusu.util.handler.ImageHandler},
        edited_time = #{editedTime}
        where id = #{entityId}
    </update>

    <select id="getItemAmount" resultType="int">
        select count(id)
        from ${param1}
    </select>

</mapper>